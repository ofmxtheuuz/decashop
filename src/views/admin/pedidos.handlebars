<h1>Todos os pedidos</h1>

{{#each infs.orders}}
    <div class="card w-100 mb-3">
        <div class="card-body p-3">
            <p>Pedido {{id}}</p>
            <p>Pedido feito por {{getUser user_id}}</p>
            <p>Pedido feito em {{formatDate data}}</p>
            <p>{{products.length}} produto(s)</p>
            <a href="/pedido/{{id}}" class="btn btn-primary">
                Ver detalhes
            </a>
        </div>
    </div>
{{/each}}