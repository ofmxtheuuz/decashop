<h1 class="mt-5">
    Seja bem-vindo {{user.name}}
</h1>

<h3>Meus pedidos</h3>

{{#each infs.orders}}
    <div class="card w-100 mb-3">
        <div class="card-body p-3">
            <p>Pedido {{id}}</p>
            <p>Pedido feito em {{formatDate data}}</p>
            <p>{{products.length}} produto(s)</p>
            <a href="/pedido/{{id}}" class="btn btn-primary">
                Ver detalhes
            </a>
        </div>
    </div>
{{/each}}